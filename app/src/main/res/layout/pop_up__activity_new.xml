<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:padding="10dp">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profili Shofer"
        android:textColor="#000000"
        android:textSize="18sp"
        android:id="@+id/profili_shofer"
        android:padding="7dp"
        android:layout_marginTop="25dp"
        />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/shofer_linear"
        android:layout_below="@+id/profili_shofer"
        android:weightSum="100"
        android:padding="1dp"
        android:background="#ffff"
        android:elevation="5dp"
        >


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/shofer_photo"
            android:src="@drawable/icon_person"
            android:layout_weight="30"
            android:transitionName="transition"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_weight="70">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:padding="7dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emri : "
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"/>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Krist Rrushi"
                    android:textColor="#000000"
                    android:id="@+id/emri_pop_main"/>



            </LinearLayout>



            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:padding="7dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mosha : "
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="25"
                    android:textColor="#000000"
                    android:id="@+id/mosha_pop_main"


                    />



            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:padding="7dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gjinia : "
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mashkull"
                    android:textColor="#000000"
                    android:id="@+id/gjinia_pop_main"/>



            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:padding="7dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tel : "
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"/>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0682343552"
                    android:textColor="#000000"
                    android:id="@+id/tel_pop_main"/>



            </LinearLayout>


        </LinearLayout>




    </LinearLayout>






    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detajet e makines"
        android:id="@+id/profili_makina"
        android:padding="7dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/shofer_linear"
        android:textColor="#000000"
        android:textSize="18sp"


        />






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/makina_linear"
        android:layout_below="@+id/profili_makina"
        android:weightSum="100"
        android:background="#ffff"
        android:elevation="5dp"

        android:padding="1dp"
        >


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/makina_photo"
            android:src="@drawable/icon_person"
            android:layout_weight="30"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_weight="70">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:padding="7dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marka : "
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"/>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fiat"
                    android:textColor="#000000"
                    android:id="@+id/marka_pop_main"/>



            </LinearLayout>



            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:padding="7dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modeli : "
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"/>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Panda"
                    android:textColor="#000000"
                    android:id="@+id/modeli_pop_main"
                    />



            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:padding="7dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Targa : "
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AA*14EK"
                    android:textColor="#000000"
                    android:id="@+id/targa_pop_main"/>



            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:padding="7dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngjyra : "
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jeshile"
                    android:textColor="#000000"
                    android:id="@+id/ngjyra_pop_main"/>




            </LinearLayout>


        </LinearLayout>




    </LinearLayout>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cmimi"
        android:id="@+id/profili_cmimi"
        android:padding="7dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/makina_linear"
        android:textColor="#000000"
        android:textSize="18sp"
        />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profili_cmimi"
        android:id="@+id/cmimi_pop_main"
        android:text="asdasdasdasdasdasdasdasdasdada"
        android:background="#ffff"
        android:elevation="5dp"
        android:padding="7dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cmimi_pop_main"
        android:layout_marginTop="20dp"
        android:text="Konfirmo"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:id="@+id/konfirmo_pop_main"
        android:background="@drawable/button_post"
       />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/konfirmo_pop_main"
        android:layout_marginTop="20dp"
        android:text="Mbyll"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:id="@+id/mbyll_pop_main"
        android:background="@drawable/button_post"
        />


    </LinearLayout>
















</RelativeLayout>