<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_main"
    android:background="#009BCE"
    android:clickable="true"
    android:focusableInTouchMode="true">








        <androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:titleTextColor="#ffffff"

    app:popupTheme="@style/AppTheme.PopupOverlay"
    android:theme="@style/ToolBarStyle"
    app:title="Profili"
    app:navigationIcon="?attr/homeAsUpIndicator"


    >


</androidx.appcompat.widget.Toolbar>









    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar1"
        android:background="@drawable/layout_upper_corners"
        android:paddingTop="10dp"

        >





        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relative_foto_makine"

            android:paddingBottom="10dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_centerInParent="true"
                app:civ_border_width="1dp"
                app:civ_border_color="#2f000000"
                android:id="@+id/foto_user"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ndrysho Foto Profili"
                android:textColor="@color/colorPrimary"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/foto_user"
                android:layout_marginTop="50dp"
                android:id="@+id/txt_view_ndrysho_foto_profili"
                />




        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear_makina_info"
            android:layout_below="@+id/relative_foto_makine"
            android:orientation="vertical"
            android:background="#ffffff"

            android:paddingLeft="20dp"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:focusableInTouchMode="true"

            >



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relative_emri"
                android:layout_marginBottom="5dp"
                android:paddingRight="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emri"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_centerVertical="true"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Krist Rrushi"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:layout_marginLeft="100dp"
                    android:id="@+id/user_info_emri_mbiemri"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:inputType="text"



                    />




            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relative_email"
                android:layout_marginBottom="5dp"
                android:paddingRight="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_centerVertical="true"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="kristrrushi@gmail.com"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:layout_marginLeft="100dp"
                    android:id="@+id/user_info_email"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:inputType="text"

                    />




            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relative_tel"
                android:layout_marginBottom="5dp"
                android:paddingRight="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telefoni"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_centerVertical="true"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0682343552"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:layout_marginLeft="100dp"
                    android:id="@+id/user_info_tel"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    />




            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relative_gjinia"
                android:layout_marginBottom="5dp"
                android:paddingRight="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gjinia"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_centerVertical="true"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mashkull"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:layout_marginLeft="100dp"
                    android:id="@+id/user_info_gjinia"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:inputType="text"

                    />




            </RelativeLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relative_mosha"
                android:layout_marginBottom="5dp"
                android:paddingRight="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mosha"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_centerVertical="true"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="25"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:layout_marginLeft="100dp"
                    android:id="@+id/user_info_mosha"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    />




            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relative_pn"
                android:paddingRight="20dp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nr ID"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_centerVertical="true"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="CV234234234xc"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:layout_marginLeft="100dp"
                    android:id="@+id/user_info_personalNumber"
                    android:maxLines="1"
                    android:imeOptions="actionDone"
                    android:inputType="text"


                    />




            </RelativeLayout>











        </LinearLayout>



    </RelativeLayout>









    </RelativeLayout>




