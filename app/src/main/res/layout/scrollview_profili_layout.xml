<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relative_main">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relative_foto_makine"
            android:background="#f7f7f7"
            android:paddingBottom="10dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="150dp"
                android:layout_height="150dp"

                android:layout_centerInParent="true"

                android:id="@+id/foto_user"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ndrysho Foto Profili"
               android:textColor="@color/colorPrimary"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/foto_user"
                android:layout_marginTop="50dp"
                />




        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear_makina_info"
            android:layout_below="@+id/relative_foto_makine"
            android:orientation="vertical"
            android:background="#ffffff"

            android:paddingLeft="20dp"

            >



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relative_emri"
                android:layout_marginBottom="5dp"
                android:paddingRight="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emri"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_centerVertical="true"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Krist Rrushi"
                   android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:layout_marginLeft="100dp"
                    android:id="@+id/user_info_emri_mbiemri"


                    />




            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relative_email"
                android:layout_marginBottom="5dp"
                android:paddingRight="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_centerVertical="true"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="kristrrushi@gmail.com"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:layout_marginLeft="100dp"
                    android:id="@+id/user_info_email"

                    />




            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relative_tel"
                android:layout_marginBottom="5dp"
                android:paddingRight="20dp"
               >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telefoni"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_centerVertical="true"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0682343552"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:layout_marginLeft="100dp"
                    android:id="@+id/user_info_tel"
                    />




            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relative_gjinia"
                android:layout_marginBottom="5dp"
                android:paddingRight="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gjinia"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_centerVertical="true"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mashkull"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:layout_marginLeft="100dp"
                    android:id="@+id/user_info_gjinia"

                    />




            </RelativeLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relative_mosha"
                android:layout_marginBottom="5dp"
                android:paddingRight="20dp"
               >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mosha"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_centerVertical="true"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="25"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:layout_marginLeft="100dp"

                    android:id="@+id/user_info_mosha"

                    />




            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relative_pn"
                android:paddingRight="20dp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nr ID"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_centerVertical="true"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="CV234234234xc"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:layout_marginLeft="100dp"
                    android:id="@+id/user_info_personalNumber"


                    />




            </RelativeLayout>











        </LinearLayout>





            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/scrollview_makina_layout"
                android:layout_below="@+id/linear_makina_info"
                android:id="@+id/include_relative_makina"/>



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_post"



            android:layout_below="@+id/linear_makina_info"
            android:layout_marginTop="30dp"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:text="Rruaj Ndryshimet"
            android:id="@+id/btn_change_info"/>


    </RelativeLayout>




</ScrollView>