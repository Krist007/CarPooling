<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff">






    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pop_up_driver_txt"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:text="sdfsdfsfsdfsdfsdf"/>


    <ListView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pop_up_driver_list"
        tools:listitem="@layout/item_list_pop_up_driver"
        android:layout_below="@+id/pop_up_driver_txt"
        android:layout_marginBottom="20dp"></ListView>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pop_up_driver_list"

        android:text="Mbyll"
        android:id="@+id/btn_pop_co_mbyll"
        android:background="@drawable/button_post"
        android:layout_margin="10dp"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:textColor="#ffffff"

        />





</RelativeLayout>