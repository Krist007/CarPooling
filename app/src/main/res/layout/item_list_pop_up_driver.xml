<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginBottom="400dp"
    android:padding="5dp"
    android:background="@drawable/user_info_shape"
    >




    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/foto_pop_up_driver"
        android:src="@drawable/icon_person"
        />






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"


        android:layout_toRightOf="@+id/foto_pop_up_driver">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beni beni"
            android:id="@+id/emri_pop_up_driver"
            android:textColor="#000000"
            android:textSize="20dp"/>


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tel_pop_up_driver"
            android:text="0423423423"
            android:textColor="#000000"
            android:textSize="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vjec :"
                android:textColor="#000000"
                android:textSize="12dp"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mosha_pop_up_driver"
                android:text="24"
                android:layout_marginLeft="4dp"
                android:textSize="12dp"
                android:textColor="#000000"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="#000000"
                android:text="Gjinia : "
                android:layout_marginLeft="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textColor="#000000"
                android:textSize="12dp"
                android:text="Mashkull"
                android:id="@+id/gjinia_pop_up_driver"/>










        </LinearLayout>



    </LinearLayout>


</RelativeLayout>