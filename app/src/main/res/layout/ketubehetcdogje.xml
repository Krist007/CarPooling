<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_main"
android:background="@drawable/cardborder"
    android:layout_marginBottom="10dp"
    android:elevation="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"


    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/foto"
        android:src="@drawable/capture"
        android:scaleType="centerCrop"
        android:transitionName="transition"


        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"



        android:id="@+id/view_foreground"
        android:orientation="horizontal"
        android:layout_below="@+id/foto"
      android:padding="5dp"


        >


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_person"
            android:id="@+id/img_mak"

            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content"


            >




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/destinaciooni_liner"
                android:orientation="horizontal"


                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NISJA"
                    android:textSize="25dp"

                    android:id="@+id/new_nisja"
                    android:textColor="#000000"
                    />




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MBERRITHJA"
                    android:textSize="25dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/new_mberritja"
                    android:textColor="#000000"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="DATA"
                    android:textColor="#000000"
                    android:id="@+id/new_data"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ORA"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/new_ora"
                    android:textColor="#000000"/>



            </LinearLayout>






        </LinearLayout>


        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"

            android:layout_marginLeft="40dp"
            android:layout_height="match_parent"
            android:background="#000000" />


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"



            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vendet"
                android:textSize="23dp"
                android:textColor="#000000"

                android:layout_marginTop="2dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="5"
                android:textSize="20dp"
                android:id="@+id/new_vendet"



                android:textColor="#fd9a05"/>



        </LinearLayout>


    </LinearLayout>












</RelativeLayout>