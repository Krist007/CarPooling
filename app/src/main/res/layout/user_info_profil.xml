<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#e6e6e6">














    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kredencialet"
        android:id="@+id/kredenciale"
        android:padding="7dp"
        android:layout_marginTop="10dp"
        />


    <LinearLayout
        android:id="@+id/layout_kredenciaoe"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_below="@id/kredenciale"
        android:background="#cdffffff"

        >

        <TextView
            android:id="@+id/user_info_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="kristrrushi@gmail.com"
            android:background="@drawable/user_info_shape"
            android:textColor="#000000"
            android:padding="7dp"


            />


        <TextView
            android:id="@+id/user_info_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="**************"
            android:textColor="#000000"
            android:background="@drawable/user_info_shape"
            android:padding="7dp"

            />



    </LinearLayout>





    <TextView
        android:id="@+id/txt_user_info_profili"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profili"
        android:layout_below="@+id/layout_kredenciaoe"
        android:layout_marginTop="20dp"
        android:padding="7dp"/>

    <LinearLayout
        android:id="@+id/layout_user_info_profili"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
