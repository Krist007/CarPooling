            android:id="@+id/user_info_emri_mbiemri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Krist Rrushiiiii"
            android:background="@drawable/user_info_shape"
            android:textColor="#000000"
            android:padding="7dp"/>

        <TextView
            android:id="@+id/user_info_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0695768251"
            android:textColor="#000000"
            android:background="@drawable/user_info_shape"
            android:padding="7dp"/>






    </LinearLayout>



    <TextView
        android:id="@+id/txt_user_info_profili_mak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_user_info_profili"
        android:text="Makina"
        android:layout_marginTop="20dp"

        android:padding="7dp"/>


    <LinearLayout
        android:id="@+id/layout_user_info_mak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#cdffffff"
        android:layout_below="@id/txt_user_info_profili_mak">

        <TextView
            android:id="@+id/user_info_marka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FIAT"
            android:background="@drawable/user_info_shape"
            android:textColor="#000000"
            android:padding="7dp"/>

        <TextView

            android:id="@+id/user_info_modeli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Panda"
            android:background="@drawable/user_info_shape"
            android:textColor="#000000"
            android:padding="7dp"/>

        <TextView
            android:id="@+id/user_info_targa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AA814EK"
            android:background="@drawable/user_info_shape"
            android:textColor="#000000"
            android:padding="7dp"/>







    </LinearLayout>




    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_update"
        android:layout_below="@id/layout_user_info_mak"
        android:layout_marginTop="15dp"
        android:text="NDRYSHO TE DHENAT"/>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_dil"
        android:layout_below="@id/btn_update"
        android:layout_marginTop="10dp"
        android:text="DIL"/>





</RelativeLayout>